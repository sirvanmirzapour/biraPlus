<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edtNameOfDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_format_list_bulleted_black_24dp"
                android:ems="10"
                android:gravity="start"
                android:hint="نام دستگاه"
                android:textColor="#000"
                android:textSize="14sp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtNumberOfDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="start"
                android:hint="شماره موبایل"
                android:textColor="#000"
                android:drawableEnd="@drawable/ic_phone_black_24dp"
                android:textSize="14sp"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edtPassOfDevice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="start"
                android:hint="رمز دستگاه"
                android:textColor="#000"
                android:drawableEnd="@drawable/ic_lock_open_black_24dp"
                android:inputType="numberPassword"
                android:textSize="14sp" />

            <include layout="@layout/radio_button_two"/>

            <LinearLayout
                android:layout_margin="8dp"
                android:id="@+id/llSaveInGetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_button">

                <ImageView
                    android:layout_marginEnd="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_circle_white_18dp"/>

                <TextView
                    android:id="@+id/txtSaveInGetNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ثبت"
                    android:textColor="#fff"
                   android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>