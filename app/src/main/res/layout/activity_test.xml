<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Activity.ActivityTest">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarGetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarGetNumber"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <TextView
                android:id="@+id/txtToolBarGetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="اضافه کردن دستگاه Lten"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                android:textColor="#fafafa" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/appBarGetNumber"
        android:id="@+id/rvDeviceList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:id="@+id/llBottomGetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFieldsForGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/design_default_color_primary"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">
        <!--
        *****************************************************************************************
          <include layout="@layout/get_new_device_information"/>
        -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardBackgroundColor="#f7f7f7"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtNameOfDevice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_format_list_bulleted_black_24dp"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="نام دستگاه"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/edtNumberOfDevice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="شماره موبایل"
                    android:textColor="#000"
                    android:drawableEnd="@drawable/ic_phone_black_24dp"
                    android:textSize="14sp"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/edtPassOfDevice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="رمز دستگاه"
                    android:textColor="#000"
                    android:drawableEnd="@drawable/ic_lock_open_black_24dp"
                    android:inputType="numberPassword"
                    android:textSize="14sp" />

                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/radioFunction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radioOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کابرد یک"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کابرد دو"/>
                    <RadioButton
                        android:id="@+id/radioThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کابرد سه"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کابرد چهار"/>

                </RadioGroup>


                <LinearLayout
                    android:layout_margin="8dp"
                    android:id="@+id/llSaveInGetNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_button">

                    <ImageView
                        android:layout_marginEnd="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_circle_white_18dp"/>

                    <TextView
                        android:id="@+id/txtSaveInGetNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ثبت"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>